export NODE_ENV=production

export MONGODB_CONNECTION_STRING=`etcdctl get /n2/config/mongodb/connnection_string`

export AZURE_STORAGE_ACCOUNT=`etcdctl get /n2/config/azure/storage/account`
export AZURE_STORAGE_KEY=`etcdctl get /n2/config/azure/storage/key`

export HOST_NAME=`etcdctl get /n2/config/host_name`

export new_relic_app_name=`etcdctl get /n2/config/newrelic/app_name`
export NEW_RELIC_APP_NAME=new_relic_app_name
export new_relic_license_key=`etcdctl get /n2/config/newrelic/license_key`
export NEW_RELIC_LICENSE_KEY=new_relic_license_key
export NEW_RELIC_HOME=`etcdctl get /n2/config/newrelic/home`

export LOGGLY_SUBDOMAIN=`etcdctl get /n2/config/loggly/subdomain`
export LOGGLY_INPUT_TOKEN=`etcdctl get /n2/config/loggly/input_token`
export LOGGLY_USERNAME=`etcdctl get /n2/config/loggly/username`
export LOGGLY_PASSWORD=`etcdctl get /n2/config/newrelic/password`

export SENDGRID_API_USER=`etcdctl get /n2/config/sendgrid/user`
export SENDGRID_API_KEY=`etcdctl get /n2/config/sendgrid/key`

export RABBITMQ_URL=`etcdctl get /n2/config/rabbitmq/uri`

export REDIS_HOST=`etcdctl get /n2/config/redis/host`
export REDIS_PORT=`etcdctl get /n2/config/redis/port`
export SUBSCRIPTION_REDIS_HOST=REDIS_HOST

export USER_SESSION_SECRET=`etcdctl get /n2/config/express/session_secret`

cd /var/www/api.nitrogen.io/service
forever server.js